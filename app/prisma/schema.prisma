generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  credits   Int      @default(0)
  createdAt DateTime @default(now())

  @@map("users")
}


model Avatar {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   
  avatar    String
  prompt    String
  createdAt DateTime @default(now())

  @@map("avatars")
} 