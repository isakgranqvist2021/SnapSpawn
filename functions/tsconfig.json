{
  "compilerOptions": {
    "target": "ES2015",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "Node16",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
